<h1>All Ads</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Seller Id</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
	<% @name=ad.name %>
	<td><%= link_to @name, ad %></td>
	<td><%= ad.description %></td>
	<td><%= ad.price.to_i %></td>
	<td><%= ad.seller_id %></td>
	<td><%= ad.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

